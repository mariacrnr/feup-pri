{
	"add-field-type": [
        {
            "name":"textParameter",
            "class":"solr.TextField",
            "indexAnalyzer":{
                "tokenizer":{
                    "class":"solr.StandardTokenizerFactory"
                },
                "filters":[
                    {"class":"solr.ASCIIFoldingFilterFactory", "preserveOriginal":true},
                    {"class":"solr.LowerCaseFilterFactory"},
                    {"class":"solr.PortugueseStemFilterFactory","preserveOriginal":true}
                ]
            },
            "queryAnalyzer":{
                "tokenizer":{
                    "class":"solr.StandardTokenizerFactory"
                },
                "filters":[
                    {"class":"solr.ASCIIFoldingFilterFactory", "preserveOriginal":true},
                    {"class":"solr.LowerCaseFilterFactory"},
                    {"class":"solr.PortugueseStemFilterFactory","preserveOriginal":true}
                ]
            }
        }
    ],
    "add-field": [
        {
            "name": "text",
            "type": "textParameter",
            "indexed": true
        },
        {
            "name": "title",
            "type": "textParameter",
            "indexed": true
        },
        {
            "name": "link",
            "type": "string",
            "indexed": false,
            "stored": true
        },
        {
            "name": "type",
            "type": "string",
            "indexed": true,
            "stored": true
        },
        {
            "name": "party",
            "type": "string",
            "indexed": false,
            "stored": true
        },
        {
            "name": "contentLength",
            "type": "int",
            "indexed": false,
            "stored": true
        },
        {
            "name": "date",
            "type": "tdate",
            "indexed": true,
            "stored": true
        }

    ]
    
}
